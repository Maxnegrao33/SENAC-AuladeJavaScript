<body>
    <h1><span id="saudaJs"></span> Juriscreison !</h1>

    <script> 
        //declarar variável
        let hora = new Date().getHours();
            //console.log(hora);
        let mensagem    
            if (hora >= 6 && hora < 12)
            {
                mensagem = "Bom Dia"
            }
            else if (hora >= 12 && hora < 18)
            {
                mensagem = "Boa Tarde"
            }else{ 
                mensagem = "Boa Noite"
            }
            let elemento = document.getElementById("saudaJs")
            elemento.innerHTML = mensagem
    </script>
</body>
